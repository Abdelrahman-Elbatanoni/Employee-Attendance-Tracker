@model AttendanceRecord
@{
    ViewData["Title"] = "Edit Attendance";
}
<h2>Edit Attendance</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="EmployeeId"></label>
        <input asp-for="Employee.FullName" class="form-control" type="text" readonly />
        <input type="hidden" asp-for="EmployeeId"/>
        <span asp-validation-for="EmployeeId" class="text-danger" />
    </div>
    <div class="form-group"> 
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="date" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control">
            <option value="Present">Present</option>
            <option value="Absent">Absent</option>
        </select>
        <span asp-validation-for="Status" class="text-danger" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
