@model IEnumerable<Department>
@{
    ViewData["Title"] = "Departments";
}
<h2>Departments</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Create New Department</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Location</th>
            <th># of Employees</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td>@dept.Name</td>
                <td>@dept.Code</td>
                <td>@dept.Location</td>
                <td>@(dept.Employees?.Count ?? 0)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@dept.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@dept.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
