@model IEnumerable<AttendanceRecord>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Employee</th>
            <th>Department</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.Date.ToString("yyyy-MM-dd")</td>
                <td>@record.Employee?.FullName</td>
                <td>@record.Employee?.Department?.Name</td>
                <td>@record.Status</td>
            </tr>
        }
    </tbody>
</table>
