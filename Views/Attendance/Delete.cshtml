@model AttendanceRecord
@{
    ViewData["Title"] = "Delete Attendance";
}
<h2>Delete Attendance</h2>

<h4>Are you sure you want to delete this record?</h4>
<dl class="row">
    <dt class="col-sm-2">Employee</dt>
    <dd class="col-sm-10">@Model.Employee?.FullName</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
